<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bhushansuwal.pickup.UserProfile">

    <TextView
        android:text="Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:id="@+id/name" />

    <TextView
        android:text="I am interested in:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:id="@+id/Interests" />

    <TextView
        android:text="Soccer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Interests"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:id="@+id/Soccer" />

    <Button
        android:text="OFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Soccer"
        android:layout_centerHorizontal="true"
        android:id="@+id/Soccer10" />

    <TextView
        android:text="Basketball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/Basketball" />

    <Button
        android:text="OFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Basketball"
        android:layout_alignLeft="@+id/Soccer10"
        android:layout_alignStart="@+id/Soccer10"
        android:layout_marginTop="14dp"
        android:id="@+id/Basketball10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Basketball10"
        android:layout_alignRight="@+id/Basketball"
        android:layout_alignEnd="@+id/Basketball"
        android:layout_marginTop="40dp"
        android:id="@+id/textView13" />

    <Button
        android:text="OFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Basketball10"
        android:layout_alignEnd="@+id/Basketball10"
        android:layout_marginBottom="28dp"
        android:id="@+id/Frisbee10" />

    <TextView
        android:text="Frisbee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Frisbee10"
        android:layout_toStartOf="@+id/textView13"
        android:id="@+id/Frisbee"
        android:layout_alignRight="@+id/Soccer"
        android:layout_alignEnd="@+id/Soccer" />

</RelativeLayout>
